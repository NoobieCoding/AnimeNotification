<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuterdust.animenotification.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_input"
        android:hint="Search           "
        android:textColorHint="@color/yellow"
        android:textColor="@color/yellow"
        android:layout_marginLeft="76dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />
    <ImageButton

        android:layout_width="43dp"
        android:layout_height="41dp"
        android:onClick="search"
        app:layout_constraintLeft_toRightOf="@+id/search_input"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/magnify"
        tools:layout_editor_absoluteY="160dp"
        tools:layout_editor_absoluteX="416dp" />
    <Button
        android:layout_width="113dp"
        android:layout_height="57dp"
        android:text="Added list"
        android:onClick="goUserActivity"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/search_input"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/listview"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="480dp"
        android:layout_height="331dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="93dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_input"></ListView>
</android.support.constraint.ConstraintLayout>
